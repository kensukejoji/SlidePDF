<IfModule mod_headers.c>
    # Required for Google Identity Services (One Tap / Sign In With Google)
    # Allows popups to communicate back to the opener
    Header set Cross-Origin-Opener-Policy "same-origin-allow-popups"
    
    # Optional: Cross-Origin-Embedder-Policy (COEP)
    # If you use SharedArrayBuffer or other sensitive features, you might need "require-corp"
    # But for general use, "unsafe-none" (default) or not setting it is usually fine.
    # We will just set COOP as that is the specific error seen.
</IfModule>

# Basic Security Headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>
